<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new photo
    </h2>

    <form action="/insert_photo" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div>
        image upload placeholder
      </div>
      <div>
        <label for="caption_box">
          Caption
        </label>
        <textarea id="caption_box" name="query_caption" placeholder = "Enter a caption for the photo..."></textarea>
      </div>
      <button>
        Create photo
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>Image</th>
        <th>Caption</th>
        <th>Owner</th>
        <th>Posted</th>
        <th>Likes</th>
        <th>Click to show details</th>
      </tr>
      <% @list_of_photos.each do |a_photo| %>
        <tr>
          <td>
            <img src="<%= a_photo.image %>" alt="">
          </td>
          <td>
            <%= a_photo.caption %>
          </td>
          <td>
            <%= a_photo.owner.username %>
          </td>
          <td>
            <%= time_ago_in_words(a_photo.created_at) %> ago
          </td>
          <td>
            <%= a_photo.likes_count %>
          </td>
          <td>
            <a href="/photos/<%= a_photo.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
